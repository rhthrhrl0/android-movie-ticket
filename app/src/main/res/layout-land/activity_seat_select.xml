    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reservation_info_box"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:background="@color/white"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <woowacourse.movie.ui.customView.ConfirmView
            android:id="@+id/reservation_confirm"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:background="@color/confirm_enabled_false"
            android:clickable="false"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/reservation_title"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/reservation_money"
            app:layout_constraintEnd_toStartOf="@id/reservation_confirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="영화제목" />

        <TextView
            android:id="@+id/reservation_money"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:singleLine="true"
            android:text="0원"
            android:textColor="@color/reservation_money_color"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/reservation_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reservation_title" />

